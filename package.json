{
    "scripts": {
        "frontend:install": "cd client && npm install",
        "frontend:start": "cd client && npm run start",
        "frontend:build": "cd client && npm run build",
        "frontend:test": "cd client && npm run test",
        "frontend:e2e": "cd client && npm run e2e",
        "frontend:lint": "cd client && npm run lint",
        "frontend:deploy": "cd client && npm run deploy",
        "api:install": "cd server && npm install",
        "api:build": "cd server && npm run build",
        "api:start": "cd server && npm run start",
        "api:deploy": "cd server && npm run deploy",
        "deploy": "npm run api:deploy && npm run frontend:deploy"
    }
}
